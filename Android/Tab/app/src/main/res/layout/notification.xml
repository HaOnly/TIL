<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="10"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/head"
            android:padding="3dp"
            android:textSize="18dp"
            android:textColor="@color/colorAccent" android:text="슬퍼하지 마세요! 슬플때는 매운 음식으로 날려!"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:text="무엇을 먹을까? 알아보러가기"
            android:padding="2dp"
            android:id="@+id/body"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView android:layout_weight="3"
        android:id="@+id/img"
        android:src="@drawable/p"
        android:layout_width="50dp" android:layout_height="match_parent"/>
</LinearLayout>